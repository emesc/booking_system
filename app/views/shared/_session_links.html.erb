<ul id="nav" class="floatright">
  <li><%#= debug controller.controller_path %></li>
  <% if user_signed_in? %>
    <li id="dropdown"><a href="">Welcome, <%= full_name(current_user.first_name, current_user.last_name) %></a>
      <ul>
        <% if current_user.admin? %>
          <li><%= link_to "Admin Area", admin_programs_path %></li>
        <% elsif current_user.manager? %>
          <li><%= link_to "Your user accounts", admin_users_path %></li>
        <% end %>
        <li><%= link_to "Sign out", destroy_user_session_path, method: :delete %></li>
      </ul>
    </li>
  <% else %>
    <li><%#= link_to "Sign up", new_user_registration_path %></li>
    <li><%= link_to "Sign in", new_user_session_path %></li>
  <% end %>
</ul>
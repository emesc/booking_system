<div class="clearfix sidebar_container floatright">
  <div class="clearfix newsletter">
    <form>
      <h2>Subscribe to our newsletter!</h2>
      <input type="text" placeholder="Email" id="mce-EMAIL"/>
      <input type="text" placeholder="Password" id="mce-TEXT"/>
      <input type="submit" value="Submit" id="mc-embedded-subscribe"/>
    </form>
  </div>
  <div class="clearfix sidebar">
    <div class="clearfix single_sidebar">
      <div class="popular_post">
        <div class="sidebar_title"><h2>Most Popular</h2></div>
        <ul>
          <% 5.times do %>
            <%= temp_popular_programs %>
          <% end %>
        </ul>
      </div>
      </div>
    <div class="clearfix single_sidebar">
      <h2>Categories</h2>
      <ul>
        <% @categories.each do |category| %>
          <li class="cat-item"><%= link_to category.name, category_path(category) %>(<%= category.programs.count %>)</li>
        <% end %>
      </ul>
    </div>
    <div class="clearfix single_sidebar">
      <h2>School Year</h2>
      <ul>
        <% @school_levels.each do |school_level| %>
          <li class="level-item"><%= link_to school_level.name, school_level_path(school_level) %> <span>(<%= school_level.programs.count %>)</span></li>
        <% end %>
      </ul>
    </div>
  </div>
</div>

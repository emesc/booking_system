<div class="clearfix sidebar_container floatright">
        
  <div class="clearfix newsletter">
    <form>
      <h2>Log in</h2>
      <input type="text" placeholder="Email" id="mce-EMAIL"/>
      <input type="text" placeholder="Password" id="mce-TEXT"/>
      <input type="submit" value="Submit" id="mc-embedded-subscribe"/>
    </form>
  </div>
  <div class="clearfix sidebar">
    <div class="clearfix single_sidebar">
      <div class="popular_post">
        <div class="sidebar_title"><h2>Most Popular</h2></div>
        <ul>
          <% 5.times do %>
            <%= temp_popular_programs %>
          <% end %>
        </ul>
      </div>
      </div>
    <div class="clearfix single_sidebar category_items">
      <h2>Categories</h2>
      <ul>
        <% @categories.each do |category| %>
          <li class="cat-item"><%= link_to category.name, category_path(category) %>(12)</li>
        <% end %>
      </ul>
    </div>
    <div class="clearfix single_sidebar">
      <h2>Recent Post</h2>
      <ul>
        <li><a href="">Category Name <span>(12)</span></a></li>

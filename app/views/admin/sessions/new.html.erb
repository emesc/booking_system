<div class="clearfix main_content floatleft">       
  <div class="clearfix content">
    <div class="contact_us">
      <h1>Log in</h1>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <p><%= f.email_field :email, placeholder: "Email*", autofocus: true, class: "wpcf7-email" %></p>
        <p><%= f.password_field :password, placeholder: "Password*", autocomplete: false, class: "wpcf7-text" %></p>
        <% if devise_mapping.rememberable? -%>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end -%>

        <div class="actions">
          <%= f.submit "Submit", class: "wpcf7-submit" %>
        </div>
        <br />
        <%= render "devise/shared/links" %>
      <% end %>
    </div>
  </div>
</div>

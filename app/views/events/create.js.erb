// call fullCalenar on calendar class (from visitors/index)
$('.calendar').fullCalendar(
  // pass in renderEvent which will take the data from the params that we're passing in JQuery parseJSON of a rendered partial
  // make sure html_safe is called so that parseJSON will correctly read it and then pass true to make it sticky
  'renderEvent',
  $.parseJSON("<%= j render(@event, format: :json).html_safe %>"),
  true
);
// then hide the modal
$('.modal').modal('hide');
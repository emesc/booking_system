<% title "Listing programs" %>
<div class="clearfix main_content floatleft">          
  <div class="clearfix content" id="my-programs">
    <div class="content_title"><h2>Recently Added Program</h2></div>
    <div class="clearfix single_content">
      <div class="clearfix post_date floatleft">
        <div class="date">
          <h3><%= @latest_program.created_at.strftime("%d") %></h3>
          <p><%= @latest_program.created_at.strftime("%B") %></p>
        </div>
      </div>
      <div class="clearfix post_detail">
        <h2><%= link_to @latest_program.program_title, program_path(@latest_program) %></h2>
        <div class="clearfix post-meta">
          <p><span><i class="fa fa-book" aria-hidden="true"></i>  <%= @latest_program.topics %></span> <span><i class="fa fa-comment" aria-hidden="true"></i> Comments</span></p>
        </div>
        <div class="clearfix post_excerpt">
          <%= image_tag("science.png", alt: "science") %>
          <p><%= truncate(@latest_program.program_description, length: 200, separator: " ") %> </p>
        </div>
        <%= link_to "Continue Reading", program_path(@latest_program) %>
      </div>
    </div>

    <% if @programs.empty? %>
      <p>Your search returned 0 result.</p>
    <% else %>
      <%= will_paginate @programs %>
      <% @programs.each do |program| %>
        <div class="clearfix single_content">
          <div class="clearfix post_date floatleft">
            <h3><%= program.created_at.strftime("%d") %></h3>
            <p><%= program.created_at.strftime("%B") %></p>
          </div>
          <div class="clearfix post_detail">
            <h2><%= link_to program.program_title, program_path(program) %></h2>
            <div class="clearfix post-meta">
              <p><span><i class="fa fa-book" aria-hidden="true"></i>  <%= program.topics %></span> <span><i class="fa fa-comment" aria-hidden="true"></i> Comments</span></p>
            </div>
            <div class="clearfix post_excerpt">
              <%= image_tag("science_bw.png", alt: "science") %>
              <p><%= truncate(program.program_description, length: 200, separator: " ") %></p>
            </div>
            <%= link_to "Continue Reading", program_path(program) %>
          </div>
        </div>
      <% end %>           
      <%= will_paginate @programs %>
    <% end %>
  </div>
</div>